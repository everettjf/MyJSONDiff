{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyJSONDiff",
  "version": "1.1.0",
  "identifier": "com.xnu.jsondiff",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../src/out"
  },
  "app": {
    "windows": [
      {
        "title": "MyJSONDiff",
        "width": 800,
        "height": 600,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' tauri:"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "3rd Party Mac Developer Application: Feng Zhu (YPV49M8592)",
      "files": {
        "embedded.provisionprofile": "./app.provisionprofile"
      },
      "entitlements": "./Entitlements.plist",
      "minimumSystemVersion": "15.0"
    },
    "category": "Utility"
  }
}
